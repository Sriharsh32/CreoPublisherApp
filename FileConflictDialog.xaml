<Window x:Class="CreoPublisherApp.FileConflictDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Conflict"
        Height="200" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="15">
        <TextBlock x:Name="MessageText"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   FontSize="14"
                   Margin="0,0,0,20"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,10,0,0">
            <Button Content="Yes" Width="80" Margin="5" Name="YesButton"/>
            <Button Content="No" Width="80" Margin="5" Name="NoButton"/>
            <Button Content="Yes to All" Width="100" Margin="5" Name="YesAllButton"/>
            <Button Content="No to All" Width="100" Margin="5" Name="NoAllButton"/>
        </StackPanel>
    </Grid>
</Window>
