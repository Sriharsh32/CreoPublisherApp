<Window x:Class="CreoPublisherApp.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="auto" Width="auto"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FF2D2D30">
    <Grid Width="auto">
        <Image Source="pack://application:,,,/Resources/background.jpeg"
       Stretch="UniformToFill"
       Opacity="0.5"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Creo PDF Batch Publisher"
                       FontSize="28" Foreground="White" Margin="0,0,0,20"
                       FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Batch convert Creo drawings to PDFs with ease!"
                       FontSize="16" Foreground="LightGray" Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>
            <Button Content="Continue" Width="170" Height="40"
                    Click="ContinueButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
