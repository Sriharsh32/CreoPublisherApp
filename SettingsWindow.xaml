<Window x:Class="CreoPublisherApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creo Executable Settings"
        Height="250" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f5f5"
        FontFamily="Segoe UI"
        FontSize="14"
        Loaded="SettingsWindow_Loaded">

    <Window.Resources>
        <!-- Global ToolTip Style -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HasDropShadow" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Configure Creo Executable Path"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#2c3e50"
                   Margin="0,0,0,20"/>

        <!-- Label -->
        <TextBlock Grid.Row="1"
                   Text="Full path to parametric.exe:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"
                   Foreground="#333"/>

        <!-- Path + Browse Button -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="{Binding CreoPath, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="True"
                     FontSize="14"
                     Padding="6"
                     Grid.Column="0"
                     Margin="0,0,10,0"
                     Background="White"
                     BorderBrush="#ccc"
                     BorderThickness="1">
                <TextBox.ToolTip>
                    Current Creo executable path. Click 'Browse...' to change.
                </TextBox.ToolTip>
            </TextBox>

            <Button Content="Browse..."
                    Width="100"
                    Grid.Column="1"
                    Command="{Binding BrowseCommand}"
                    Padding="4"
                    Background="#3498db"
                    Foreground="White"
                    BorderBrush="#2980b9"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.ToolTip>
                    Browse and select parametric.exe from your system.
                </Button.ToolTip>
            </Button>
        </Grid>

        <!-- Spacer -->
        <StackPanel Grid.Row="3"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Save"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding SaveCommand}"
                    Background="#27ae60"
                    Foreground="White"
                    BorderBrush="#1e8449"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.ToolTip>
                    Save settings without closing this window.
                </Button.ToolTip>
            </Button>

            <Button Content="Cancel"
                    Width="80"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"
                    Background="#95a5a6"
                    Foreground="White"
                    BorderBrush="#7f8c8d"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.ToolTip>
                    Revert changes and close this window.
                </Button.ToolTip>
            </Button>

            <Button Content="OK"
                    Width="80"
                    Command="{Binding ConfirmCommand}"
                    Background="#2980b9"
                    Foreground="White"
                    BorderBrush="#2471a3"
                    BorderThickness="1"
                    Cursor="Hand">
                <Button.ToolTip>
                    Save settings and close this window.
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
