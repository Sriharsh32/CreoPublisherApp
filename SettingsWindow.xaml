<Window x:Class="CreoPublisherApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creo Executable Settings"
        Height="180" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter full path to parametric.exe:" FontWeight="Bold" FontSize="14"/>

        <TextBox Grid.Row="1" Text="{Binding CreoPath, UpdateSourceTrigger=PropertyChanged}" 
                 IsReadOnly="{Binding NotIsEditing}"
                 VerticalAlignment="Center" FontSize="14"
                 Padding="5" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" >

            <Button Content="Edit" Width="80" Margin="5,0" Command="{Binding EditCommand}" 
                    IsEnabled="{Binding NotIsEditing}"/>

            <Button Content="Save" Width="80" Margin="5,0" Command="{Binding SaveCommand}" 
                    IsEnabled="{Binding IsEditing}"/>

            <Button Content="Cancel" Width="80" Margin="5,0" Command="{Binding CancelCommand}" 
                    IsEnabled="{Binding IsEditing}"/>

            <Button Content="OK" Width="80" Margin="5,0" Command="{Binding ConfirmCommand}" 
                    IsEnabled="{Binding NotIsEditing}"/>
        </StackPanel>
    </Grid>
</Window>
