<Window x:Class="CreoPublisherApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Settings" Height="420" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">

        <!-- Margins Section -->
        <TextBlock Text="Margins:" FontWeight="Bold" Margin="0,0,0,5"/>

        <TextBlock Text="Left Margin (mm):" Margin="0,5,0,2"/>
        <TextBox Text="{Binding LeftMargin}" Width="150" Margin="0,0,0,10" />

        <TextBlock Text="Top Margin (mm):" Margin="0,5,0,2"/>
        <TextBox Text="{Binding TopMargin}" Width="150" Margin="0,0,0,10" />

        <!-- Resolution -->
        <TextBlock Text="Resolution (DPI):" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox SelectedItem="{Binding SelectedResolution}" Width="150" Margin="0,0,0,10">
            <ComboBoxItem Content="150"/>
            <ComboBoxItem Content="300"/>
            <ComboBoxItem Content="600"/>
        </ComboBox>

        <!-- Paper Size -->
        <TextBlock Text="Paper Size:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox SelectedItem="{Binding SelectedPaperSize}" Width="150" Margin="0,0,0,10">
            <ComboBoxItem Content="A4"/>
            <ComboBoxItem Content="A3"/>
            <ComboBoxItem Content="Letter"/>
        </ComboBox>

        <!-- Orientation -->
        <TextBlock Text="Orientation:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ComboBox SelectedItem="{Binding SelectedOrientation}" Width="150" Margin="0,0,0,10">
            <ComboBoxItem Content="Portrait"/>
            <ComboBoxItem Content="Landscape"/>
        </ComboBox>

        <!-- Confirm Button -->
        <Button Content="OK" Width="80" HorizontalAlignment="Center" Command="{Binding ConfirmCommand}" />
    </StackPanel>
</Window>
