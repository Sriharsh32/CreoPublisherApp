<Window x:Class="CreoPublisherApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creo Executable Settings"
        Height="200" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Loaded="SettingsWindow_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Select the full path to parametric.exe:"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,8"
                   ToolTipService.ShowDuration="6000">
        </TextBlock>

        <!-- Path + Browse -->
        <DockPanel Grid.Row="1" LastChildFill="True">
            <TextBox Text="{Binding CreoPath, UpdateSourceTrigger=PropertyChanged}" 
                     IsReadOnly="True"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,10,0">
                <TextBox.ToolTip>
                    <ToolTip Background="#333"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             HasDropShadow="True">
                        Shows the current Creo executable path. Click "Browse..." to update it.
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>

            <Button Content="Browse..."
                    Width="100"
                    Command="{Binding BrowseCommand}">
                <Button.ToolTip>
                    <ToolTip Background="#333"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             HasDropShadow="True">
                        Browse your file system to locate parametric.exe.
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </DockPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding SaveCommand}">
                <Button.ToolTip>
                    <ToolTip Background="#333"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             HasDropShadow="True">
                        Save the selected Creo path without closing the window.
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Content="Cancel"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding CancelCommand}">
                <Button.ToolTip>
                    <ToolTip Background="#333"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             HasDropShadow="True">
                        Discard changes and close the window.
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Content="OK"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding ConfirmCommand}">
                <Button.ToolTip>
                    <ToolTip Background="#333"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             HasDropShadow="True">
                        Save changes and close the window.
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
