<Window x:Class="CreoPublisherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CreoPublisherApp"
        Title="Creo PDF Batch Publisher" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Input Folder -->
            <RowDefinition Height="Auto"/>
            <!-- Browse Files -->
            <RowDefinition Height="Auto"/>
            <!-- Output Folder -->
            <RowDefinition Height="Auto"/>
            <!-- Date Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Invert Selection Button -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Select/Deselect Toggle Button -->
            <RowDefinition Height="Auto"/>
            <!-- Publish Button -->
            <RowDefinition Height="120"/>
            <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Input Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Folder" Command="{Binding BrowseFolderCommand}" Width="130" Margin="0,0,10,0"/>
            <TextBox Text="{Binding InputPath}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Browse Files -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Files" Command="{Binding BrowseFilesCommand}" Width="130" Margin="0,0,10,0"/>
            <TextBox Text="{Binding FilesCountText, Mode=OneWay}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center" />
        </StackPanel>

        <!-- Output Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Select Output Folder" Command="{Binding BrowseOutputFolderCommand}" Width="150" Margin="0,0,10,0"/>
            <TextBox Text="{Binding OutputPath}" IsReadOnly="True" Width="680" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Date Filters -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Left" >

            <!-- Created Date Filter -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Created Date Start:" FontWeight="Bold" />
                <DatePicker SelectedDate="{Binding CreatedDateStart, Mode=TwoWay}" Width="140"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Created Date End:" FontWeight="Bold" />
                <DatePicker SelectedDate="{Binding CreatedDateEnd, Mode=TwoWay}" Width="140"/>
            </StackPanel>

            <!-- Modified Date Filter -->
            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Modified Date Start:" FontWeight="Bold" />
                <DatePicker SelectedDate="{Binding ModifiedDateStart, Mode=TwoWay}" Width="140"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                <TextBlock Text="Modified Date End:" FontWeight="Bold" />
                <DatePicker SelectedDate="{Binding ModifiedDateEnd, Mode=TwoWay}" Width="140"/>
            </StackPanel>

            <!-- Clear Filters Button -->
            <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" Width="100" VerticalAlignment="Bottom" />
        </StackPanel>

        <!-- Invert Selection Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Invert Selection" Command="{Binding InvertSelectionCommand}" Width="120"/>
        </StackPanel>

        <!-- Files DataGrid -->
        <DataGrid Grid.Row="5" ItemsSource="{Binding FilteredFiles}" AutoGenerateColumns="False" CanUserAddRows="False" Height="300" Margin="0,0,0,10" SelectionMode="Extended" SelectionUnit="FullRow" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, Mode=TwoWay}" Width="70"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="140"/>
                <DataGridTextColumn Header="Modified Date" Binding="{Binding ModifiedDate}" Width="140"/>
                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Select/Deselect Toggle Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="{Binding SelectDeselectButtonText}" Command="{Binding ToggleSelectCommand}" Width="150"/>
        </StackPanel>

        <!-- Publish Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right">
            <Button Content="Publish" Command="{Binding PublishCommand}" Width="120"/>
        </StackPanel>

        <!-- Log TextBox -->
        <TextBox Grid.Row="8" Text="{Binding Log}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
    </Grid>
</Window>
