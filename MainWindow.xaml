<Window x:Class="CreoPublisherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CreoPublisherApp"
        Title="Creo PDF Batch Publisher" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <!-- Input Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Folder" Command="{Binding BrowseFolderCommand}" Width="130" Margin="0,0,10,0"
                    Background="SteelBlue" Foreground="White"/>
            <TextBox Text="{Binding InputPath}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Browse Files -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Files" Command="{Binding BrowseFilesCommand}" Width="130" Margin="0,0,10,0"
                    Background="SteelBlue" Foreground="White"/>
            <TextBox Text="{Binding FilesCountText, Mode=OneWay}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Output Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Select Output Folder" Command="{Binding BrowseOutputFolderCommand}" Width="130" Margin="0,0,10,0"
                    Background="SteelBlue" Foreground="White"/>
            <TextBox Text="{Binding OutputPath}" IsReadOnly="True" Width="680" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Date Filters + Search -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10" VerticalAlignment="Center" HorizontalAlignment="Left">
            <!-- Created Date Start -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Created Start" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding CreatedDateStart}" Width="130"/>
            </StackPanel>

            <!-- Created Date End -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Created End" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding CreatedDateEnd}" Width="130"/>
            </StackPanel>

            <!-- Modified Date Start -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Modified Start" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding ModifiedDateStart}" Width="130"/>
            </StackPanel>

            <!-- Modified Date End -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                <TextBlock Text="Modified End" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding ModifiedDateEnd}" Width="130"/>
            </StackPanel>

            <!-- Search -->
            <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                <TextBlock Text="Search Filename" FontWeight="Bold"/>
                <TextBox Width="160" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!-- Clear -->
            <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" Width="100"
                    VerticalAlignment="Bottom" Margin="5,0,0,0"
                    Background="IndianRed" Foreground="White"/>
        </StackPanel>

        <!-- Selection Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Invert Selection" Command="{Binding InvertSelectionCommand}" Width="120" Margin="0,0,10,0"
                    Background="DarkSlateGray" Foreground="White"/>
            <Button Content="Select All" Command="{Binding SelectAllCommand}" Width="100" Margin="0,0,10,0"
                    Background="DarkSlateGray" Foreground="White"/>
            <Button Content="Deselect All" Command="{Binding DeselectAllCommand}" Width="100"
                    Background="DarkSlateGray" Foreground="White"/>
        </StackPanel>

        <!-- Files DataGrid -->
        <DataGrid Grid.Row="5" ItemsSource="{Binding FilteredFiles}" AutoGenerateColumns="False" CanUserAddRows="False"
                  Height="300" Margin="0,0,0,10" SelectionMode="Extended" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, Mode=TwoWay}" Width="70"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="140"/>
                <DataGridTextColumn Header="Modified Date" Binding="{Binding ModifiedDate}" Width="140"/>
                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Publish Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="Publish" Command="{Binding PublishCommand}" Width="120"
                    Background="ForestGreen" Foreground="White"/>
        </StackPanel>

        <!-- Log Output -->
        <TextBox Grid.Row="7" Text="{Binding Log}" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 FontFamily="Consolas" FontSize="12"/>
    </Grid>
</Window>
