<Window x:Class="CreoPublisherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CreoPublisherApp"
        Title="Creo PDF Batch Publisher" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    

    <Grid Margin="15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- Input Folder -->
            <RowDefinition Height="Auto"/>    <!-- Browse Files -->
            <RowDefinition Height="Auto"/>    <!-- Output Folder -->
            <RowDefinition Height="*"/>       <!-- DataGrid -->
            <RowDefinition Height="Auto"/>    <!-- Selection Buttons -->
            <RowDefinition Height="120"/>     <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Input Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Folder" Command="{Binding BrowseFolderCommand}" Width="130" Margin="0,0,10,0"/>
            <TextBox Text="{Binding InputPath}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Browse Files -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <Button Content="Browse Files" Command="{Binding BrowseFilesCommand}" Width="130" Margin="0,0,10,0"/>
            <!-- FIXED: Added Mode=OneWay here -->
            <TextBox Text="{Binding FilesCountText, Mode=OneWay}" IsReadOnly="True" Width="700" Height="25" VerticalContentAlignment="Center" />
        </StackPanel>

        <!-- Output Folder -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,12" VerticalAlignment="Center">
            <Button Content="Select Output Folder" Command="{Binding BrowseOutputFolderCommand}" Width="150" Margin="0,0,10,0"/>
            <TextBox Text="{Binding OutputPath}" IsReadOnly="True" Width="680" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Files DataGrid -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding Files}" AutoGenerateColumns="False" CanUserAddRows="False" Height="300" Margin="0,0,0,10" SelectionMode="Extended" SelectionUnit="FullRow" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, Mode=TwoWay}" Width="70"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="140"/>
                <DataGridTextColumn Header="Modified Date" Binding="{Binding ModifiedDate}" Width="140"/>
                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Selection Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Left" Margin="0,0,0,0" >
            <Button Content="Select All" Command="{Binding SelectAllCommand}" Width="110" Margin="0,0,10,0"/>
            <Button Content="Deselect All" Command="{Binding DeselectAllCommand}" Width="110" Margin="0,0,10,0"/>
            <Button Content="Invert Selection" Command="{Binding InvertSelectionCommand}" Width="120" Margin="0,0,10,0"/>
            <Button Content="Publish" Command="{Binding PublishCommand}" Width="120" Margin="50,0,0,0"/>
        </StackPanel>

        <!-- Log TextBox -->
        <TextBox Grid.Row="5" Text="{Binding Log}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
    </Grid>
</Window>
