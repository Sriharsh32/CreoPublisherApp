<Window x:Class="CreoPublisherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creo PDF Publisher" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="Browse Files" Command="{Binding BrowseFilesCommand}" Margin="0,0,10,0"/>
                <Button Content="Browse Folder" Command="{Binding BrowseFolderCommand}" Margin="0,0,10,0"/>
            </StackPanel>
            <TextBox Text="{Binding InputPath}" IsReadOnly="True" Height="25" Margin="0,0,0,10"/>

            <Button Content="Browse Output Folder" Command="{Binding BrowseOutputFolderCommand}" Margin="0,0,0,10" Height="25"/>
            <TextBox Text="{Binding OutputPath}" IsReadOnly="True" Height="25" Margin="0,0,0,10"/>

            <Button Content="Publish" Command="{Binding PublishCommand}" Height="30"/>
        </StackPanel>

        <!-- This is the important fix: Set Mode=OneWay here -->
        <TextBox Grid.Row="1" Text="{Binding LogText, Mode=OneWay}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>
</Window>
